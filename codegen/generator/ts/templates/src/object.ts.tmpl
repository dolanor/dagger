{{ define "object" }}
{{- with . }}
{{- if .Description -}}
	{{- $commentLines := CommentToLines .Description }}
	{{- /* we split the comment string into a string slice of one line per element */ -}}

	{{- template "object_comment" $commentLines }}
{{ end -}}
class {{ .Name | FormatName }} extends BaseClient {
{{ range $field := .Fields -}}
  {{ template "field" . }}
{{- end }}
}
{{- end }}
{{ end }}
