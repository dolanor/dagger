{{ define "object" }}
	{{- with . }}
		{{- if HasPrefix .Name "__" }}
			{{- /* we ignore types prefixed by __ */ -}}
		{{- else }}
			{{- if .Fields }}
				{{- if .Description -}}
					{{- $commentLines := CommentToLines .Description }}
					{{- /* we split the comment string into a string slice of one line per element */ -}}

					{{- template "object_comment" $commentLines }}
{{ "" }}
				{{- end -}}

				{{- $name := .Name | FormatName }}
				{{- if  eq $name "Query" }}
export default class Client extends BaseClient {
				{{- else -}}
class {{ .Name | FormatName }} extends BaseClient {
				{{- end }}
					{{- "" }}{{ range $field := .Fields -}}
						{{ template "field" . }}
					{{- end }}
}
			{{- else }}
				{{ template "type" . }}
			{{- end }}
		{{- end }}
	{{- end }}
{{ end }}
