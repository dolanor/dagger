{{ define "field" }}
	{{- if Solve . }}async {{end}}
	{{- .Name -}}
	(
		{{- if .Args -}}
			{{- template "input_args" . -}}
		{{- end -}}
	)
	{{- if Solve . -}}
		{{- with .TypeRef }}
			{{- template "return_solve" . -}}
		{{- end -}}
		{{- "" }} {
	{{- else -}}
		{{- with .TypeRef }}
			{{- template "return" . -}}
		{{- end -}}
		{{- "" }} {
    this._queryTree = [
      ...this._queryTree,
      {
      operation: '{{ .Name }}',
      args
      }
    ]
	{{- if .TypeRef }}

    return new {{ .TypeRef | FormatOutputType }}(this._queryTree)
	{{- end }}
  }
	{{- end -}}
{{ end }}
